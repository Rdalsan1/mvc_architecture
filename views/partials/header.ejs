<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raj's Boutique</title>
    <link rel="stylesheet" href="/style.css">
</head>
<header>
    <div class="header-container">
        <a href="/" class="logo"><strong>RajsBoutique</strong></a>
        <form action="/items/search" method="GET">
            <input type="text" name="q" class="search-bar" placeholder="Search...">
            <button type="submit">Search</button>
        </form>
        <nav>
            <ul class="nav-links">
                <li><a href="/items">Browse</a></li>
                <li><a href="/items/new">Sell</a></li>
                <%if(!user){%>
                    <a href='/users/new'>Sign Up</a>
                    <a href='/users/login'>Login</a>
                <%} else {%>
                    <a href='/users/profile'>My Account</a>
                    <a href='/users/logout'>Logout</a>
                <%}%>
            </ul>
        </nav>
    </div>
    <% if (typeof errorMessages !== 'undefined' && errorMessages.length > 0) { %>
        <% errorMessages.forEach(message => { %>
            <div class='error'><%= message %></div>
        <% }); %>
    <% } %>
    
    <% if (typeof successMessages !== 'undefined' && successMessages.length > 0) { %>
        <% successMessages.forEach(message => { %>
            <div class='success'><%= message %></div>
        <% }); %>
    <% } %>
    
</header>
